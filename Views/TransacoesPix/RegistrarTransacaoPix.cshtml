@model GestorDeLimitesModel
@{
    ViewData["Title"] = "Área Pix";
}

<div class="text-center">
    <h1 class="display-4">Área Pix</h1>
    <p>Realize uma transferência pix.</p>
</div>

<h1 class="display-6">Preencha as informações abaixo:</h1>

<form asp-controller="TransacoesPix" asp-action="RegistrarTransacaoPix" method="post" class="shadow-lg p-3 mb-5">
    <div class="row g-3" style="margin-bottom: 10px">
        <div class="col">
            <label class="form-label">CPF do mandante:</label>
            <input class="form-control" name="documentoMandante" placeholder="00100100010" required />
        </div>
        <div class="col">
            <label class="form-label">CPF do recebedor:</label>
            <input class="form-control" name="documentoRecebedor" placeholder="00100100010" required />
        </div>
        <div class="col">
            <label class="form-label">Valor da transferência:</label>
            <input type="number" class="form-control" name="valorDaTransferencia" placeholder="2000.50" required />
        </div>
    </div>

    <button class="form-control btn btn-primary " type="submit">Enviar</button>
</form>

<h2>@ViewBag.Message</h2>

@if (Model != null)
{
    <table class="table table-striped table-bordered table-info">
        <thead>
            <tr>
                <th scope="col">Cliente</th>
                <th scope="col">Nº Agência</th>
                <th scope="col">Nº Conta</th>
                <th scope="col">Seu novo Limite</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Documento</td>
                <td>@Model.Numero_Agencia</td>
                <td>@Model.Numero_Conta</td>
                <td>@Model.Limite_Pix</td>
            </tr>
        </tbody>
    </table>
}

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Voltar para a Home</a>
</div>